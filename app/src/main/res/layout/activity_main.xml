<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable name="viewmodel" type="com.noactivity.test.MainViewModel" />
        <variable name="plus" android:value="plus" type="String" />
        <variable name="minus" android:value="minus" type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.noactivity.test.MainActivity"
        >
        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <TextView
                android:layout_width="150pt"
                android:layout_height="100dp"
                android:text="@{viewmodel.counter}"
                />
            <Button
                android:text="+"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="@{() -> viewmodel.onButtonTapped(plus)}"
                />
            <Button
                android:text="-"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="@{() -> viewmodel.onButtonTapped(minus)}"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>